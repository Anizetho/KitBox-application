<Page
    x:Class="Application_KitBox.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application_KitBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF265E89">
        <FlyoutBase.AttachedFlyout>
            <Flyout>
                <Grid Height="100" Width="100"/>
            </Flyout>
        </FlyoutBase.AttachedFlyout>

        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="#FF436B89"  BorderBrush="Red" BorderThickness="3" Grid.ColumnSpan="2" Grid.Row="1" Height="70" Width="200" >
                <TextBlock x:ConnectionId='25' Text="Customize"
               FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4" Height="70" Width="200" >
                <TextBlock x:ConnectionId='24' Text="Summary"
               FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4" Height="70" Width="300" >
                <TextBlock x:ConnectionId='23' Text="Personnal data"
               FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4,4,4" Height="70" Width="250" >
                <TextBlock x:ConnectionId='22' Text="Confirmation"
               FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
        </StackPanel>

        <StackPanel  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Border Background="#FF173852"  BorderBrush="Gray" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="6,6,6,3" Height="100" Width="580" >
                <TextBlock x:ConnectionId='21' Text="Steps to follow :"
               FontSize="40"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <Border Background="#66173852"  BorderBrush="Gray" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="6,3" Height="250" Width="580" >
                <TextBlock x:ConnectionId='20' FontSize="32"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Left"                                                 >
                    <Run Text=" 1) Customize your shelf : "/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text=" First, you can configure the basic "/>
                    <LineBreak/>
                    <Run Text=" dimensions of your shelf. You can do it  "/>
                    <LineBreak/>
                    <Run Text=" just down the right side of this page.  "/>
                </TextBlock>
            </Border>
            <Border Background="#66173852"  BorderBrush="Gray" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="6,3" Height="250" Width="580" >
                <TextBlock x:ConnectionId='19' FontSize="32"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Left"                                                 >
                    <Run Text=" 2) Customize your case : "/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text=" Then, you can configure each case of"/>
                    <LineBreak/>
                    <Run Text=" your shelf. You will can do it on the next"/>
                    <LineBreak/>
                    <Run Text=" page.  "/>
                </TextBlock>
            </Border>
            <Border Background="#66173852"  BorderBrush="Gray" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="6,3,6,6" Height="110" Width="580" >
                <TextBlock x:ConnectionId='18' FontSize="32"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Left"                                                 >
                    <Run Text=" Notice : On each page, there will be a"/>
                    <LineBreak/>
                    <Run Text=" place to show you the state of the shelf."/>
                </TextBlock>
            </Border>
        </StackPanel>

        <StackPanel  Grid.Column="1" Grid.Row="1">
            <Border Background="#FF173852"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2" Height="100" Width="580">
                <TextBlock x:ConnectionId='17' Text="1) Customize your shelf"
               FontSize="40"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <TextBlock x:ConnectionId='10' x:Name="textBlock2" Grid.Column="1" Text="Shelf dimensions" HorizontalAlignment="Center" VerticalAlignment="Top"  FontSize="40" Margin="30" RequestedTheme="Dark"                                                 />
            <ComboBox x:ConnectionId='11' x:Name="comboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="60"                                               />

            <Border Background="#00173852" Grid.ColumnSpan="2" Grid.Row="1" Height="100" Width="350">
                <TextBlock x:ConnectionId='16' x:Name="textBlock3" Grid.Column="1" Text="Color of the corner" HorizontalAlignment="Center" VerticalAlignment="Bottom"  FontSize="40" RequestedTheme="Dark"                                                />
            </Border>
            <Border Background="#00173852" Grid.ColumnSpan="2" Grid.Row="1" Height="60" Width="350" >
                <CheckBox x:ConnectionId='15' x:Name="Brown1" Content="Brown" HorizontalAlignment="Left"  RequestedTheme="Dark" VerticalAlignment="Center"                         >
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.RenderTransform>
                </CheckBox>
            </Border>
            <Border Background="#00173852" Grid.ColumnSpan="2" Grid.Row="1" Height="60" Width="350" >
                <CheckBox x:ConnectionId='14' x:Name="Black" Content="Black" HorizontalAlignment="Left" RequestedTheme="Dark" VerticalAlignment="Bottom" Margin="0,0,0,14"                        >
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.RenderTransform>
                </CheckBox>
            </Border>
            <Border Background="#00173852" Grid.ColumnSpan="2" Grid.Row="1" Height="60" Width="350" >
                <CheckBox x:ConnectionId='13' x:Name="White" Content="White" HorizontalAlignment="Left"  RequestedTheme="Dark" VerticalAlignment="Center"                        >
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.RenderTransform>
                </CheckBox>
            </Border>
            <Border Background="#00173852" Grid.ColumnSpan="2" Grid.Row="1" Height="60" Width="350" >
                <CheckBox x:ConnectionId='12' x:Name="Red" Content="Red" HorizontalAlignment="Left"  RequestedTheme="Dark" VerticalAlignment="Center"                      >
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.RenderTransform>
                </CheckBox>
            </Border>
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Border Background="#FF7D9EB8"  BorderBrush="Black" BorderThickness="2,4" Height="70" Width="200"  >
                <Button x:ConnectionId='9' x:Name="button" Content="Cancel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="36"                     />
            </Border>
            <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4" Height="70" Width="300"  >
                <Button x:ConnectionId='8' x:Name="button1" Content="Next step (case)" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" FontSize="36" Height="62"                      />
            </Border>
        </StackPanel>



        <StackPanel  Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
            <Border Background="#FF173852"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2" Height="100" Width="580">
                <TextBlock x:ConnectionId='7' Text="View of your shelf"
               FontSize="40"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
            </Border>
            <Image x:ConnectionId='1' x:Name="image" Source ="/Assets/RougeVerreTransRedim.png" HorizontalAlignment="Stretch"  Margin="0,400,0,-195" Height="auto" VerticalAlignment="Stretch" Width="400"/>
            <Image x:ConnectionId='2' x:Name="Flèche_vert" Source ="/Assets/double flèche horizontale.png" Margin="470,-300,0,100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
                <Image.RenderTransform>
                    <CompositeTransform SkewY="-0.127" TranslateY="-3.002" Rotation="-89.781"/>
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='3' x:Name="Flèche_oblique" Source ="/Assets/double flèche oblique.png" Margin="450,240,10,-211" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" HorizontalAlignment="Left" Width="80" >
                <Image.RenderTransform>
                    <CompositeTransform SkewY="-26.06" TranslateY="-82.134"/>
                </Image.RenderTransform>
            </Image>

            <Image x:ConnectionId='4' x:Name="Flèche_hor" Source ="/Assets/double flèche horizontale.png" Margin="120,165,190,-215" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
                <Image.RenderTransform>
                    <CompositeTransform SkewY="6.404" TranslateY="-21.888"/>
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='5' x:Name="image1" Source ="/Assets/RougeVerreTransRedim.png" HorizontalAlignment="Stretch"  Margin="0,-200,0,-84" Height="auto" VerticalAlignment="Stretch" Width="400"/>
            <Image x:ConnectionId='6' x:Name="image2" Source ="/Assets/RougeVerreTransRedim.png" HorizontalAlignment="Stretch"  Margin="0,-350,0,0" Height="auto" VerticalAlignment="Stretch" Width="400"/>


        </StackPanel>


    </Grid>
</Page>

