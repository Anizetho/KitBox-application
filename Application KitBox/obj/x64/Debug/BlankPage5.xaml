<Page
    x:Class="Application_KitBox.BlankPage5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application_KitBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#FF265E89">
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <Grid Height="100" Width="100"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="#FF7D9EB8"  BorderBrush="Black" BorderThickness="3" Grid.ColumnSpan="2" Grid.Row="1" Height="70" Width="200" >
                    <TextBlock x:ConnectionId='5' Text="Customize"
                        FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Bottom"                                                  Margin="0,0,0,8" />
                </Border>
                <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4" Height="70" Width="200" >
                    <TextBlock x:ConnectionId='4' Text="Summary"
                        FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
                </Border>
                <Border Background="#FF7D9EB8"  BorderBrush="Black" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4" Height="70" Width="300" >
                    <TextBlock x:ConnectionId='3' Text="Personnal data"
                        FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
                </Border>
                <Border Background="#FF436B89"  BorderBrush="Red" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="2,4,4,4" Height="70" Width="250" >
                    <TextBlock x:ConnectionId='2' Text="Confirmation"
                        FontSize="36"  Foreground="#FFFFFFFF" SelectionHighlightColor="#FF34D716" TextAlignment="Center" VerticalAlignment="Center"                                                  />
                </Border>
            </StackPanel>


            <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" >
                <Border Background="#FF7D9EB8"  BorderBrush="Black" BorderThickness="2,4" Height="70" Width="auto"  >
                    <Button x:ConnectionId='1' x:Name="button" Content="Home" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="36"                     />
                </Border>
            </StackPanel>

        </Grid>

    </Grid>
</Page>

